---
import Layout from "../layouts/Layout.astro";
import Window from "../components/Window.svelte";
import Content from "../content/pages/services.md";
---

<Layout
	title="Services"
	description="Information on what I do and how you can work with me.">
	<div class="layout__grid services">
		<div class="layout__cell">
			<Window title="Services" order={0} titleTag="h1" client:load>
				<div class="container rte">
					<Content />
				</div>
			</Window>
		</div>
		<div class="layout__cell">
			<Window title="Work with me" titleTag="span" order={1} client:load>
				<div class="stack">
					<h2>Excited to work together?</h2>
					<p>I'm currently open to hearing about new opportunities.</p>
					<a class="services__button button--ui" href="/contact">
						<span class="button--ui__content"> Reach out to me -&gt; </span>
					</a>
				</div>
			</Window>
		</div>
	</div>
</Layout>

<style lang="scss">
	@media (min-width: 62em) {
		.services {
			grid-template-columns: 1fr 40ch;
			gap: 1rem;
		}
	}
</style>
